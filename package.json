{
  "name": "vite-react-chakra-starter",
  "version": "0.1.0",
  "private": true,
  "author": "sozonome",
  "scripts": {
    "dev": "vite",
    "build": "pnpm type-check && vite build",
    "build:turbo": "npx turbo build",
    "serve": "vite preview",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix && pnpm format",
    "lint:turbo": "npx turbo lint",
    "type-check": "tsc",
    "type-check:turbo": "npx turbo type-check",
    "format": "prettier --write src",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "release": "standard-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.0",
    "@chakra-ui/react": "^2.6.0",
    "@emotion/react": "^11.10.8",
    "@emotion/styled": "^11.10.8",
    "@fontsource/plus-jakarta-sans": "^4.5.11",
    "@metamask/providers": "^11.1.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.12.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.8.0",
    "react-router-dom": "^6.10.0",
    "viem": "^1.3.0",
    "wagmi": "^1.3.9",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.6.1",
    "@types/node": "^18.16.2",
    "@types/react": "18.2.0",
    "@types/react-dom": "^18.2.1",
    "@types/react-helmet": "^6.1.6",
    "@vitejs/plugin-react": "^4.0.0",
    "commitlint": "^17.6.1",
    "eslint": "^8.39.0",
    "eslint-config-sznm": "^1.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "typescript": "5.0.4",
    "vite": "^4.3.3"
  }
}
